﻿@using Microsoft.AspNetCore.Components.Authorization

<MudNavMenu>
    <AuthorizeView>
        <Authorized Context="authState">
            @{
                var user = authState.User;
                bool isAdmin = user.IsInRole("Admin");
                bool isUser = user.IsInRole("User");
            }

            <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Inicio</MudNavLink>
            <MudNavLink Href="employees" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.PersonSearch">Empleados</MudNavLink>

            @if (isAdmin)
            {
                <MudNavLink Href="countries" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Public">
                    Países
                </MudNavLink>
            }

        </Authorized>
    </AuthorizeView>
</MudNavMenu>